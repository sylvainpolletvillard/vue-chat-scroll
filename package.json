  "keywords": [
    "vue",
    "directive",
    "chat",
    "scroll",
    "bottom"
  ],
  "license": "MIT",
  "author": "Theodore Messinezis",
  "contributors": [
    "Sylvain Pollet-Villard"
  ],
  "files": [
