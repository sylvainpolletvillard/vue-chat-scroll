    "jsdom": "^21.1.0",
    "typescript": "^4.9.5",
    "vite": "^4.1.4",
    "vitest": "^0.28.5",
    "vue-tsc": "^1.1.7"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
